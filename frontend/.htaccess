RewriteEngine On
RewriteBase /senapenmas-2026/frontend/

# Redirect page/ID/slug to page.php?id=ID
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^page/([0-9]+)/(.+)$ page.php?id=$1 [L,QSA]

